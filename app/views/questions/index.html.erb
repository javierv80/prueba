<%= provide(:title, 'Preguntas y respuestas') %>

<div id="ask">
	<h1>Pregunta Algo</h1>

	<% if logged_in? %>
		<%= render 'question_form'%>
	<% else %>
		<p>Para hacer preguntas debes iniciar sesion</p>
	<% end %>

</div><!---end ask-->

<div id="questions">
	<h1>Preguntas pendientes</h1>

	<% if @questions.any? %>
		<ul>
			<%= render @questions %>
		</ul>	
		<%= will_paginate %>
		
	<% else %>
		<p>No hay preguntas para mostrar.</p>
	<% end %>

</div><!--- end questions-->